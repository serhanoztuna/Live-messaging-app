						<Label  Text="{Binding Text}" 
                   Style="{DynamicResource ListItemTextStyle}" />
			
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
    
  </ListView>
</ContentPage>
